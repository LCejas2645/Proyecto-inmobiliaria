@model Tipo
@{
    ViewData["Title"] = "Modificar Tipo de Inmueble";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center">@ViewData["Title"]</h3>

            <form asp-controller="Tipo" asp-action="Actualizar" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TipoInmueble" class="control-label"></label>
                    <input asp-for="TipoInmueble" class="form-control" />
                    <span asp-validation-for="TipoInmueble" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Guardar</button>
                <a asp-controller="Tipo" asp-action="Index" class="btn btn-danger mt-3 ml-2">Cancelar</a>
            </form>
        </div>
    </div>
</div>