@model IEnumerable<Inmueble>
@{
    ViewData["Title"] = "Inmueble";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensaje"]
    </div>
}

<div class="container mt-5">
    <h1 class="mb-4">ABM de Inmueble</h1>
    <a asp-controller="Inmueble" asp-action="Insertar" class="btn btn-success mb-3">Agregar Inmueble</a>


    <table class="table">
        <thead>
            <tr>
                @* <th>Id</th> *@

                <th>Direccion</th>
                <th>Ambientes</th>
                <th>Superficie</th>
                <th>Latitud</th>
                <th>Longitud</th>
                <th>id Propietario</th>
                <th>Propietario</th>
                <th>Disponible</th>
                <th>Tipo</th>
                <th>Uso</th>
                <th>Precio</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Inmueble in Model)
            {
                <tr>
                    <td style="display: none;">@Inmueble.Id</td>
                    <td>@Inmueble.Direccion</td>
                    <td>@Inmueble.Ambientes</td>
                    <td>@Inmueble.Superficie</td>
                    <td>@Inmueble.Latitud</td>
                    <td>@Inmueble.Longitud</td>
                    <td>@Inmueble.IdPropietario</td>
                    <td>@Inmueble.Propietario.ToString()</td>
                    <td>@Inmueble.Disponible</td>
                    <td>@Inmueble.Tipo.ToString()</td>
                    <td>@Inmueble.Uso</td>
                    <td>@Inmueble.Precio</td>
                    
                    <td>
                        <a asp-controller="Inmueble" asp-action="Actualizar" asp-route-id="@Inmueble.Id"
                            class="btn btn-primary btn-sm">Modificar</a>

                        <a asp-controller="Inmueble" asp-action="Eliminar" asp-route-id="@Inmueble.Id"
                            class="btn btn-danger btn-sm"
                            onclick="return confirm('¿Estás seguro de que deseas eliminar esta persona?')">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
